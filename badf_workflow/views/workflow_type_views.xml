<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue Tree (Liste) -->
    <record id="view_workflow_type_tree" model="ir.ui.view">
        <field name="name">workflow.type.tree</field>
        <field name="model">workflow.type</field>
        <field name="arch" type="xml">
            <tree string="Types de Workflow">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form (Formulaire) -->
    <record id="view_workflow_type_form" model="ir.ui.view">
        <field name="name">workflow.type.form</field>
        <field name="model">workflow.type</field>
        <field name="arch" type="xml">
            <form string="Type de Workflow">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Search (Recherche) -->
    <record id="view_workflow_type_search" model="ir.ui.view">
        <field name="name">workflow.type.search</field>
        <field name="model">workflow.type</field>
        <field name="arch" type="xml">
            <search string="Rechercher Types de Workflow">
                <field name="name"/>
                <field name="code"/>
                <filter string="Actif" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactif" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action de Fenêtre -->
    <record id="action_workflow_type" model="ir.actions.act_window">
        <field name="name">Types de Workflow</field>
        <field name="res_model">workflow.type</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_workflow_type_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau type de workflow
            </p>
            <p>
                Les types de workflow permettent de catégoriser les différents circuits de validation (Crédit, Congé, etc.)
            </p>
        </field>
    </record>

    <!-- Menu Principal -->
    <menuitem id="menu_badf_workflow_root"
              name="BADF Workflow"
              sequence="10"/>

    <!-- Menu Configuration -->
    <menuitem id="menu_workflow_configuration"
              name="Configuration"
              parent="menu_badf_workflow_root"
              sequence="100"/>

    <!-- Menu Types de Workflow -->
    <menuitem id="menu_workflow_type"
              name="Types de Workflow"
              parent="menu_workflow_configuration"
              action="action_workflow_type"
              sequence="10"/>

</odoo>
